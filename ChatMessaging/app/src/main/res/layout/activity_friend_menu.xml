<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="0.5">

        <Button
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id = "@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBackButtonClicked"
            android:text = "Logout"
            android:textColor = "#ffffff"
            android:background="#ff7f00"/>
        <Space
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="4"
            android:layout_gravity="center"
            android:id="@+id/friendList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend List"
            android:textColor="#ff7f00"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold" />
        <Space
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id = "@+id/loginedUserInfo"
            android:textColor = "#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LoginedUser"
            android:background="#ff7f00"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        >
    </View>

    <ImageButton
        android:layout_marginTop="50dp"
        android:layout_weight="15"
        android:id = "@+id/myImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:id = "@+id/friend1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#66ff7f00">


        <ImageView
            android:id = "@+id/friend1Online"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id = "@+id/PartnerName"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:text = "kyubin"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize = "20dp"
            android:textStyle="bold"
            android:onClick="onButtonFriend1Clicked"
            android:textColor="#ff7f00"
            android:background="#00ff7f00"
            android:gravity="left|center"
            android:paddingLeft="8dp"/>
        <TextView
            android:id = "@+id/friend1stateMessage"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Wow!! So cool"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</LinearLayout>